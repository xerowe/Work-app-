<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/styles/css/styles.css">
  <title>Lindago Work Log</title>
</head>
<body id="login">



  <div class="h-75 d-flex justify-content-center align-items-center flex-wrap">
    <div class="container w-100">
    <% if(error && error.length > 0 ) { %>
      <div class="alert alert-danger mt-5" role="alert">
        <%= error %>
      </div>
    <% } %>
    <% if(success && success.length > 0 ) { %>
    <div class="alert alert-success mt-5" role="alert">
      <%= success %>
    </div>
    <% } %>
    </div>
    <div id="login-box" class="d-flex p-5">
      <div class="left p-5 mr-5 text-center">
        <p>Have an account?</p>
        <div class="btn login">Log in</div>
      </div>
      <div class="right p-5 ml-5 text-center">
        <p>Don't have an account?</p>
        <div class="btn signup">Sign Up</div>
      </div>
      <div id="signup-form" class="card form-holder signup-form-active">
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
            <input type="text" name="username"  placeholder="Enter User Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="password"  placeholder="Enter Password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Sign Up</button>
            </div>
          </form>
        </div>
      </div>
        <div id="login-form" class="card form-holder">
          <div class="card-body">
            <form action="/login" method="POST">
              <div class="form-group">
              <input type="text" name="username" placeholder="Username" class="form-control">
              </div>
              <div class="form-group">
                <input type="password" name="password" placeholder="Password" class="form-control">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary">Log In</button>
              </div>
            </form>
          </div>
        </div>
    </div>
  </div>
  <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
  <script type="text/javascript">
  $(document).ready(function(){
    $(".signup").click(function(){
        $("#signup-form").css({"margin-left": "320px", "opacity": "1", "display": "block"});
        $("#login-form").css({ "opacity": "0", "display": "none"});
    });
    $(".login").click(function(){
        $("#login-form").css({"margin-right": "320px", "opacity": "1", "display": "block"});
        $("#signup-form").css({ "opacity": "0", "display": "none"});
    });
});
  </script>
</body>
</html>
